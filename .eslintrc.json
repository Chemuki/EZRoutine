{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["standard", "standard-jsx", "prettier"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["simple-import-sort"],
	"rules": {
		"simple-import-sort/imports": "error",
		"simple-import-sort/exports": "error"
	},
	"ignorePatterns": ["public/", ".next/", "out/", "build/"]
}
